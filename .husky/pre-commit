#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged (ESLint + Prettier on staged files)
echo "ğŸ“ Linting and formatting staged files..."
npx lint-staged

if [ $? -ne 0 ]; then
  echo "âŒ Lint-staged failed! Please fix the errors."
  exit 1
fi

# Run TypeScript type check
echo "ğŸ” Type checking..."
npm run type-check

if [ $? -ne 0 ]; then
  echo "âŒ Type check failed! Please fix type errors."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"
